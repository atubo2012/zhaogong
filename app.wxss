/**
 *小程序demo中的样式表
 */
.line {
    padding-top: 30rpx; /**每行的上内边距**/
}

.line text { /**line class内的 text元素，用来显示描述**/
    color: #6D6D72;
    font-size: 28rpx;
    margin-left: 40rpx; /**左外边距**/
}

.line-control { /**每一行内的控件**/
    background-color: #fff;
    border-bottom: #d9d9d9 1px solid;
    border-top: #d9d9d9 1px solid;
    margin-top: 10rpx;
}

.line-control .item { /**用两个.号定义子class的样式**/
    box-sizing: border-box;
    text-align: left;
    color: #007AFF;
    font-size: 32rpx;
    padding-left: 40rpx;
    position: relative
}

.line-control .item:active { /**被点中后处于活动状态的控件的背景变色发生变化**/
    background: #d9d9d9;
}

.line-control .item.flag {
    color: #333;
}

.line-control .item.flag:active { /**开关类控件处于活动状态的控件的背景变色发生变化**/
    background: #fff;
}

.line-control .item-inner {
    border-bottom: #d9d9d9 1px solid; /**只显示下边框，以实线(solid)风格显示**/
    height: 90rpx;
    line-height: 90rpx;
}

.line-control .item:last-child .item-inner {
    border: none;
}

.line-control .switch {
    vertical-align: middle;
    line-height: normal;
}

.line-control text {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
    color: #8E8E93;
    margin-left: 0;
}

.line-control .switch-status {
    color: #999;
    position: absolute;
    right: 40rpx;
    top: 0;
}

.line-control .item.disabled {
    color: #999
}

.line-control .item.disabled:active {
    background: none;
}

