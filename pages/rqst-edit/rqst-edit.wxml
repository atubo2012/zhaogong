            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{rdata.osdt}}" start="2015-09-01" end="2017-09-01"
                            bindchange="bindDateChange">
                        <view class="weui-input">{{rdata.osdt}}</view>
                    </picker>
                    <input name="osdt" value="{{rdata.osdt}}" hidden="true"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" value="{{rdata.ostm}}" start="09:01" end="21:01" bindchange="bindTimeChange">
                        <view class="weui-input">{{rdata.ostm}}</view>
                    </picker>
                    <input name="ostm" value="{{rdata.ostm}}" hidden="true"/>
                </view>
            </view>


            <view class="weui-cells__title">联系方式</view>
            <view class="weui-cells weui-cells_after-title"/>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">详细地址</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="addr"  placeholder="如：XX路XX号XX小区XX层XX室"
                           value="{{rdata.addr}}" />
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">联系电话</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="mbnb" value="{{rdata.mbnb}}"/>
                </view>
            </view>

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">客户尊姓</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="clfn" value="{{rdata.clfn}}"/>
                </view>
            </view>

            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="mbnb2" value="{{rdata.mbnb2}}" placeholder="请输入手机号"/>
                </view>
                <view class="weui-cell__ft">
                    <view class="weui-vcode-btn">获取验证码</view>
                </view>
            </view>

            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">验证码</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="yzm" value="{{rdata.yzm}}" placeholder="请输入验证码"/>
                </view>
                <view class="weui-cell__ft">
                    <image class="weui-vcode-img" src="../../image/vcode.jpg" style="width: 108px" />
                </view>
            </view>


            <view class="weui-cells__title">房屋情况</view>
            <view class="weui-cells weui-cells_after-title"/>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">房屋面积</view>
                </view>
                <view class="weui-cell__bd">
                    <input class="weui-input" name="size" value="{{rdata.size}}"/>
                    <input name="reqId" value="{{rdata.reqId}}" hidden="true"/>
                    <input name="rdst" value="{{rdata.rdst}}" hidden="true"/>
                </view>
            </view>
            <radio-group bindchange="radioChange" name="tools">
                <label class="weui-cell weui-check__label" wx:for="{{radioItems}}" wx:key="value">
                    <radio class="weui-check" value="{{item.value}}" checked="{{item.checked}}"/>

                    <view class="weui-cell__bd">{{item.name}}</view>
                    <view class="weui-cell__ft weui-cell__ft_in-radio" wx:if="{{item.checked}}">
                        <icon class="weui-icon-radio" type="success_no_circle" size="16"/>
                    </view>
                </label>
            </radio-group>


            <view class="weui-btn-area">
                <button class="weui-btn" form-type="submit" type="primary" disabled="{{submitButtonDisabled}}">提交</button>
                <button class="weui-btn" bindtap="changePreview" type="default">取消</button>

            </view>

        </view>

        <view class="weui-form-preview" hidden="{{!preview}}">
            <view class="weui-form-preview__hd">
                <view class="weui-form-preview__label">付款金额</view>
                <view class="weui-form-preview__value_in-hd">¥2400.00</view>
            </view>
            <view class="weui-form-preview__bd">
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">服务时间</view>
                    <view class="weui-form-preview__value">{{rdata.osdt}} {{rdata.ostm}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">地址</view>
                    <view class="weui-form-preview__value">{{rdata.addr}}</view>
                </view>
                <view class="weui-form-preview__item">
                    <view class="weui-form-preview__label">电话</view>
                    <view class="weui-form-preview__value">{{rdata.mbnb}}</view>
                </view>
            </view>
            <view class="weui-btn-area">
                <button class="weui-btn" bindtap="changePreview">修改</button>
                <button class="weui-btn" data-reqId="{{rdata.reqId}}" bindtap="delete" >删除</button>
            </view>
        </view>
    </form>

    </view>
    <include src="../tplt/footer.wxml"/>
</view>
