<view class="page">
    <include src="../tplt/pagehead.wxml"/>
    <view class="page__bd"><!--框架头与页面内容空3行-->



        <view class="weui-cells__title">个人信息</view>
        <view class="weui-cells weui-cells_after-title"/>
        <form bindsubmit="onSubmit" bindreset="formReset">

            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">真实姓名</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="name" value="{{lborInfo.name}}" bindblur="blurName"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">手机号码</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="mbnb" value="{{lborInfo.mbnb}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="weui-label">居住地址</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="addr" value="{{lborInfo.addr}}"/>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__bd">
                    <image src="{{source}}" mode="aspecFill" style="width: 640rpx; height: 640rpx"
                           hidden="{{hideimg}}"/>
                    <button bindtap="ulcertpic" type="primary" size="mini">上传头像</button>
                </view>
            </view>
            <button formType="submit" type="primary" size="mini">保存</button>
            <button formType="reset" type="warn" size="mini">重填</button>
        </form>




        <view class="weui-cells__title" >空闲档期</view>
        <view class="weui-cells weui-cells_after-title"/>

        <view wx:for="{{weekly}}" wx:key="a1" wx:for-item="wk" wx:for-index="wkidx">
            <form bindsubmit="addidle">
                <input name="wkidx" value="{{wkidx}}" disabled="true" hidden="true"/>星期{{wkidx+1}}
                <button formType="submit" type="primary" size="mini">+</button>
            </form>

            <view wx:for="{{wk.idle}}" wx:key="a2" wx:for-item="idled" wx:for-index="idledidx">
                <form bindsubmit="delidle">
                        <input name="day" value="{{wk.day}}" disabled="true" hidden="true"/>
                        <input name="wkidx" value="{{wkidx}}" disabled="true" hidden="true"/>
                        <input name="idledidx" value="{{idledidx}}" disabled="true" hidden="true"/>
                    <view class="weui-flex">
                        <view class="weui-flex__item"><view class="placeholder">
                            空闲时段
                        </view></view>
                        <view class="weui-flex__item"><view class="placeholder">
                            <input name="fr" value="{{idled.fr}}" data-wkidx="{{wkidx}}" data-idledidx="{{idledidx}}" bindinput="frInput"/>
                        </view></view>
                        <view class="weui-flex__item"><view class="placeholder">
                            <input name="to" value="{{idled.to}}" data-wkidx="{{wkidx}}" data-idledidx="{{idledidx}}" bindinput="toInput"/>
                        </view></view>
                        <view class="weui-flex__item"><view class="placeholder">
                            <button formType="submit" type="primary" size="mini">-</button>
                        </view></view>
                    </view>
                </form>
            </view>
        </view>



    </view>
    <include src="../tplt/footer.wxml"/>
</view>

