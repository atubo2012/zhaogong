                        <!--</view>-->
                    </view>


                </view>
            </block>
        </view>


    </view>

    <view class="weui-footer">
        <view class="weui-footer__links">
            <navigator url="../about/about" class="weui-footer__link" bindtap="goHome">首页</navigator>
        </view>
        <view class="weui-footer__text">Copyright © 2017</view>
    </view>


