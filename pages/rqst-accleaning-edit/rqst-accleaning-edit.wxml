    <view class="page__bd">


        <form bindsubmit="onSubmit" bindreset="formReset">

            <view class="page__bd page__bd_spacing" hidden="{{preview}}">
                <view class="weui-toptips weui-toptips_warn" wx:if="{{showTopTips}}">{{topTips}}</view>

                <!--业务信息部分-上门服务时间-->
                <cc_time_picker cc_rdata="{{rdata.cc_rdata}}" bind:dateChangeEvent="onDateChange"  bind:timeChangeEvent="onTimeChange" />

                <!--费用类别-->
                <cc_charging id="cc_charging" cc_rdata="{{rdata.cc_rdata_charging}}" cart="{{rdata.cart}}"
                             charging_type="{{charging_type}}"
                             bind:upriceChangeEvent="onUpriceChange"
                             bind:duraChangeEvent="onDuraChange"
                             bind:cartChangeEvent="onCartChange"
                />


                <!--联系信息部分-地址、称呼、手机信息-->
                <view class="weui-cells__title">服务地址</view>
                <view class="weui-cells weui-cells_after-title">
                    <addressinput id='ccmap' title="选择地址"
                                  location="{{rdata.location}}"
                                  address="{{rdata.address}}" bind:chooseaddressevent="onChooseAddressEvent"  />


                    <cc_nametitle id='nametitle' name="{{rdata.clfn}}" sex="{{rdata.sex}}" bind:inputnametitleevent="onNameTitleChangeEvent" />

                    <mobileinput id='ccmb' title="手机号组件的标题" mobile="{{rdata.mobile}}" smsCode=""
                                 bind:checkmobileevent="onCheckMobileEvent"  focusMobile="{{focusMobile}}"/>
                    <input name="biz_type" value="{{charging_type}}"  hidden="true"/>
                </view>

                <cc_uploadpic id='uploadpic' picsList="{{rdata.pics_list}}" bind:uploadchangeevent="onUploadChangeEvent"/>


